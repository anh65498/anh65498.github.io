<%include partials/header.ejs%>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpTravel!</h1>
      <p>View all dreamy destinations</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/destinations/new">Add New Destination</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
      <% for (var dest of destinations){ %>
        <div class="col-md-4 col-sm-6">
          <div class="thumbnail">
            <img src=<%=dest.image%> />
            <div class="caption">
              <h4><%=dest.name%></h4>
              <p><%=dest.state%>, <%=dest.country%></p>
              <p><a href="/destinations/<%=dest._id%>" class="btn btn-primary">More info</a></p>
            </div>
          </div>
        </div>
      <% } %>
  </div>
</div>  <!-- end of "container"> -->
<%include partials/footer.ejs%>

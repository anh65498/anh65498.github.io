<%include partials/header.ejs%>


<!-- action's value must be the same as app.post()'s URL in backend app.js -->
<div class="container">
  <div class="row">
    <h1>Create a New Comment to <%=destination.name%></h1>
    <div class="input-container">
      <form class="form-horizontal" action="/destinations/<%=destination._id%>/comments" method="post">
        <div class="form-group">
          <label for="au">Author:</label>
          <input id="au" type="text" class="form-control" name="comment[author]" placeholder="Anh">   <!--  use comment[author] s.t. Comment.create(req.body.comment, ... is possible -->
        </div>

        <div class="form-group">
          <label for="cm">Comment:</label>
          <textarea id="cm" class="form-control" name="comment[content]" rows="4" cols="80"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-sm btn-block">Submit</button>   <!-- btn-block expands the whole btn to parent's container -->
        </div>  <!-- .form-group -->
      </form>
    </div>  <!-- .input-container -->

  </div>  <!-- .row -->
</div>    <!-- .container -->
<%include partials/footer.ejs%>
